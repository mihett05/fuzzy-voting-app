{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    ".read": false,
    ".write": false,
    "polls": {
      "$owner": {
        ".read": true,
        ".write": "$owner === auth.uid",
        "$poll": {
          "votes": {
            ".read": "data.hasChild(auth.uid) || $owner === auth.uid",
            "$vote_user": {
              ".write": "!data.parent().hasChild(auth.uid) && $vote_user === auth.uid",
              ".validate": "!data.parent().hasChild(auth.uid) && $vote_user === auth.uid && data.parent().parent().child(\"variants\").hasChild(newData.child(\"variant\").val())"
            }
          }
        }
      }
    },
    "users": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}
